        <form method="POST" action="/listings">
            <div>

            
            <label for="title" class="form-label">  Title </label>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control">
        </div>
        <br> <br>
        <div>
            <label for="description" class="form-label">  description </label>
            <textarea name="listing[description]" class="form-control" type="text"></textarea>
        </div>
        <br> <br>
        <div>

            <label for="image" class="form-label">  Image link </label>
            <input name="listing[image]" class="form-control" type="text">
        </div>
        <br> <br>
        <div>

            <label for="price" class="form-label">  Price </label>
            <input name="listing[price]"class="form-control" placeholder="enter price" type="number">
        </div> 
        <br> <br>
        <div>

            <label for="location" class="form-label">  Location </label>
            <input name="listing[location]" class="form-control error-message success-message" placeholder="enter location" type="text">
            



        </div>
        <br> <br>
        <div>
            <label for="country" class="form-label">  Country </label>
            <input name="listing[country]" class="form-control" placeholder="enter country" type="text">
        </div>
        <br> <br>
           <button class="btn btn-dark add-btn"> Add</button>

        </form>
    </body>
